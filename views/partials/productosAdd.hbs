<div class="modal-dialog modal-md" role="document">
   <div class="modal-content modal-bg-success modal-colored">
      <div class="modal-header">
         <h6 class="modal-title">Basic title</h6>
         <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
            <img src="img/svg/x.svg" alt="x" class="svg">
         </button>
      </div>
      <div class="modal-body">
         <form>
            <div class="container-fluid">
               <div class="row mb-2">
                     <p>Descripciones</p>
               </div>
               <div class="mb-2">
                     <input type="text" class="form-control form-control-lg" placeholder="Digite una descripcion">
               </div>
               <div class="row mb-2">
                  <div class="col">
                     <p>Categoria</p>
                  </div>
                  <div class="col">
                     <p>Proveedor</p>
                  </div>
               </div>
               <div class="row mb-2">
                  <div class="col">
                     <div class="dm-select ">
                        <select name="select-1" id="categoria" class="form-control" required>
                           <option selected disabled>Seleccione</option>
                           {{#each categorias}}
                                 <option>{{descripcion}}</option>
                           {{/each}}
                        </select>
                     </div>
                  </div>
                  <div class="col">
                     <div class="dm-select ">
                        <select name="select-1" id="distribuidor" class="form-control" required>
                           <option selected disabled>Seleccione</option>
                           {{#each proveedores}}
                                 <option>{{nombre}}</option>
                           {{/each}}
                        </select>
                     </div>
                  </div>
               </div>
               <div class="row mb-2">
                  <p>Precio</p>
               </div>
               <div class="row mb-2">
                  <div class="col">
                     <input type="text" class="form-control form-control-lg" placeholder="0">
                  </div>
                  <div class="col"></div>
                  <div class="col"></div>
                  <div class="col"></div>
               </div>
            </div>
         </form>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-primary btn-sm">AÃ±adir</button>
         <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancelar</button>
      </div>
   </div>
</div>